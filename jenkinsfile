pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/SanjaiRaj747/8.2CDevSecOps.git'
            }
        }
        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }
        stage('Run Tests') {
            steps {
                sh 'npm test || true' // Allows pipeline to continue despite test failures
            }
        }
        stage('Generate Coverage Report') {
            steps {
                // Ensure coverage report exists
                sh 'npm run coverage || true'
            }
        }
        stage('NPM Audit (Security Scan)') {
            steps {
                sh 'npm audit || true' // This will show known CVEs in the output
            }
        }
        stage('SonarCloud Analysis') {
            steps {
                // Securely use the SONAR_TOKEN credential
                withCredentials([string(credentialsId: 'SONAR_TOKEN', variable: 'SONAR_TOKEN')]) {
                    sh '''
                    # Download the SonarScanner CLI
                    wget https://binaries.sonarsource.com/Distribution/sonar-scanner-cli/sonar-scanner-cli-4.7.0.2747-linux.zip
                    unzip sonar-scanner-cli-4.7.0.2747-linux.zip
                    export PATH=$PWD/sonar-scanner-4.7.0.2747-linux/bin:$PATH
                    
                    # Run the analysis using the sonar-project.properties file
                    sonar-scanner
                    '''
                }
            }
        }
    }
}
