pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/SanjaiRaj747/8.2CDevSecOps.git'
            }
        }
        stage('Install Dependencies') {
            steps {
                bat 'npm install'
            }
        }
        stage('Run Tests') {
            steps {
                bat 'npm test || exit 0'
            }
        }
        stage('Generate Coverage Report') {
            steps {
                // Ensure coverage report exists
                bat 'npm run coverage || exit 0'
            }
        }
        stage('NPM Audit (Security Scan)') {
            steps {
                bat 'npm audit || exit 0'
            }
        }
        stage('SonarCloud Analysis') {
            steps {
                withCredentials([string(credentialsId: 'SONAR_TOKEN', variable: 'SONAR_TOKEN')]) {
                    bat '''
                    # Download the SonarScanner CLI version compatible with Java 11
                    curl -L "https://binaries.sonarsource.com/Distribution/sonar-scanner-cli/sonar-scanner-cli-4.6.2.2472-windows.zip" -o sonar-scanner-cli-4.6.2.2472-windows.zip
                    
                    # Unzip the file
                    tar -xf sonar-scanner-cli-4.6.2.2472-windows.zip
                    
                    # Add sonar-scanner to the path
                    set PATH=%CD%\\sonar-scanner-4.6.2.2472-windows\\bin;%PATH%
                    
                    # Run the analysis using the sonar-project.properties file
                    sonar-scanner.bat
                    '''
                }
            }
        }
    }
}
